	<ui:style type='com.baselet.gwt.client.view.MainView.MyStyle'>
		.menuItem {
			padding-left: 0.3em;
			font-size: 0.9em;
		}
		.menuItem:hover {
			/*gradients created with http://www.colorzilla.com/gradient-editor/*/
			background: #63acff; /* Old browsers */
			background: -moz-linear-gradient(left, #63acff 0%, #cbebff 49%, #ffffff 100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, right top, color-stop(0%,#63acff), color-stop(49%,#cbebff), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(left, #63acff 0%,#cbebff 49%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(left, #63acff 0%,#cbebff 49%,#ffffff 100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(left, #63acff 0%,#cbebff 49%,#ffffff 100%); /* IE10+ */
			background: linear-gradient(to right, #63acff 0%,#cbebff 49%,#ffffff 100%); /* W3C */
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#63acff', endColorstr='#ffffff',GradientType=1 ); /* IE6-9 */
			}
		.propertiesTitle {
			padding-left: 0.5em;
			font-size: 0.85em;
			font-weight: bold;
			background-color: #E7E7E7;
			-moz-user-select: -moz-none;
			-khtml-user-select: none;
			-webkit-user-select: none;
			-ms-user-select: none;
			user-select: none;
		}
	</ui:style>
	
