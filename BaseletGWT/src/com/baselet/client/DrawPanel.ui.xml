<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.canvas.client'>
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:DockLayoutPanel width="100%" height="100%">
			<g:north size="30.0">
				<g:MenuBar>
					<g:MenuItem text="File">
						<g:MenuBar vertical="true">
							<g:MenuItem text="New" />
							<g:MenuItem ui:field="openMenuItem" text="Open..." />
							<g:MenuItem text="Recent Files">
								<g:MenuBar vertical="true" />
							</g:MenuItem>
							<g:MenuItemSeparator />
							<g:MenuItem text="Generate Class Elements from Files or Directory..." />
							<g:MenuItem text="Generate Class Element Options..." />
							<g:MenuItemSeparator />
							<g:MenuItem ui:field="saveMenuItem" text="Save" />
							<g:MenuItem ui:field="restoreMenuItem" text="Restore" />
							<g:MenuItem ui:field="saveAsMenuItem" text="Save as..." />
							<g:MenuItem text="Export as...">
								<g:MenuBar vertical="true" >
									<g:MenuItem ui:field="exportJpgMenuItem" text="JPG"/>
									<g:MenuItem ui:field="exportPngMenuItem" text="PNG"/>
									<g:MenuItem ui:field="exportUxfMenuItem" text="UXF"/>
								</g:MenuBar>
							</g:MenuItem>
							<g:MenuItem text="Mail to..." />
							<g:MenuItem text="Print" />
							<g:MenuItemSeparator />
							<g:MenuItem text="Edit Current Palette" />
							<g:MenuItemSeparator />
							<g:MenuItem text="Options" />
						</g:MenuBar>
					</g:MenuItem>
					<g:MenuItem text="Edit">
						<g:MenuBar vertical="true">
							<g:MenuItem text="Undo" />
							<g:MenuItem text="Redo" />
							<g:MenuItem text="Delete" />
							<g:MenuItemSeparator />
							<g:MenuItem text="Select All" />
							<g:MenuItem text="Group" />
							<g:MenuItem text="Ungroup" />
							<g:MenuItemSeparator />
							<g:MenuItem text="Cut" />
							<g:MenuItem text="Copy" />
							<g:MenuItem text="Paste" />
						</g:MenuBar>
					</g:MenuItem>
					<g:MenuItem text="Help">
						<g:MenuBar vertical="true">
							<g:MenuItem text="Online Help..." />
							<g:MenuItem text="Online Sample Diagrams..." />
							<g:MenuItem text="Video Tutorial: Basic Use and Custom Elements..." />
							<g:MenuItemSeparator />
							<g:MenuItem text="UMLet Homepage..." />
							<g:MenuItem text="Rate UMLet at Eclipse Marketplace..." />
							<g:MenuItemSeparator />
							<g:MenuItem text="About UMLet" />
						</g:MenuBar>
					</g:MenuItem>
				</g:MenuBar>
			</g:north>
			<g:center>
				<g:SplitLayoutPanel>
					<g:center>
						<g:TabLayoutPanel ui:field="diagramTabPanel"
							barUnit="EM" barHeight="2" />
					</g:center>
					<g:east size='400'>
						<g:SplitLayoutPanel ui:field="mainSplit">
							<g:center>
									<g:DockLayoutPanel unit="EM">
										<g:north class="BBBB" size="2.0">
											<g:ListBox ui:field="paletteChooser" visibleItemCount="1" width="100%"/>
										</g:north>
										<g:center>
											<g:SimpleLayoutPanel ui:field="palettePanel" />
										</g:center>
									</g:DockLayoutPanel>
							</g:center>
							<g:south size="150">
								<g:TextArea ui:field="propertiesPanel" height="100%" width="100%" />
							</g:south>
						</g:SplitLayoutPanel>
					</g:east>
				</g:SplitLayoutPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 