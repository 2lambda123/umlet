<?xml version="1.0"?>
<project name="BaseletGWT" basedir="." default="gwt-compile-draft">

	<property name="src.dir" location="src" />
	<property name="build.dir" location="compile_out" />
	<property name="lib.dir" location="war/WEB-INF/lib" />
	<property name="gwt.module.name" value="com.baselet.gwt.BaseletGWT" />
	<property name="gwt.sdk.location" value="C:/Program Files/Eclipse/plugins/com.google.gwt.eclipse.sdkbundle_2.5.1/gwt-2.5.1" />
	<property name="elements.src.dir" location="../BaseletElements/src" />

	<path id="project.classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<pathelement location="${gwt.sdk.location}/gwt-user.jar" />
		<pathelement location="${gwt.sdk.location}/gwt-dev.jar" />
		<pathelement location="${elements.src.dir}" />
	</path>

	<target name="gwt-compile-draft">
		<java failonerror="true" fork="true" classname="com.google.gwt.dev.Compiler">
			<classpath>
				<pathelement location="${src.dir}" />
				<path refid="project.classpath" />
			</classpath>
			<jvmarg value="-Xmx256M" />
			<arg line="-draftCompile" />
			<arg line="-war"/>
			<arg value="${build.dir}" />
			<arg value="${gwt.module.name}" />
		</java>
		<delete dir="${build.dir}/WEB-INF" />
		<copy file="war/Baselet.css" tofile="${build.dir}/Baselet.css"/>
		<copy file="war/Baselet.html" tofile="${build.dir}/Baselet.html"/>
	</target>

	<target name="gwt-compile">
		<java failonerror="true" fork="true" classname="com.google.gwt.dev.Compiler">
			<classpath>
				<!-- src dir is added to ensure the module.xml file(s) are on the classpath -->
				<pathelement location="${src.dir}" />
				<path refid="project.classpath" />
			</classpath>
			<jvmarg value="-Xmx256M" />
			<arg line="-war"/>
			<arg value="${build.dir}" />
			<arg value="${gwt.module.name}" />
		</java>
		<delete dir="${build.dir}/WEB-INF" />
		<copy file="war/Baselet.css" tofile="${build.dir}/Baselet.css"/>
		<copy file="war/Baselet.html" tofile="${build.dir}/Baselet.html"/>
	</target>
</project>