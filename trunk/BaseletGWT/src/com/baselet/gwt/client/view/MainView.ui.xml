<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:o='urn:import:com.baselet.gwt.client.view.widgets'>
	<ui:style type='com.baselet.gwt.client.view.MainView.MyStyle'>
		.menuItem {
			padding-left: 0.3em;
			font-size: 0.9em;
		}
		.menuItem:hover {
			/*gradients created with http://www.colorzilla.com/gradient-editor/*/
			background: #63acff; /* Old browsers */
			background: -moz-linear-gradient(left, #63acff 0%, #cbebff 49%, #ffffff 100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, right top, color-stop(0%,#63acff), color-stop(49%,#cbebff), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(left, #63acff 0%,#cbebff 49%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(left, #63acff 0%,#cbebff 49%,#ffffff 100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(left, #63acff 0%,#cbebff 49%,#ffffff 100%); /* IE10+ */
			background: linear-gradient(to right, #63acff 0%,#cbebff 49%,#ffffff 100%); /* W3C */
			}
		.propertiesTitle {
			padding-left: 0.5em;
			font-size: 0.85em;
			font-weight: bold;
			background-color: #E7E7E7;
			-moz-user-select: -moz-none;
			-khtml-user-select: none;
			-webkit-user-select: none;
			-ms-user-select: none;
			user-select: none;
		}
	</ui:style>
	
	<g:HTMLPanel width="100%" height="100%">
				<g:SplitLayoutPanel width="100%" height="100%" ui:field="diagramPaletteSplitter">
					<g:west size='50'>
						<g:FlowPanel ui:field="menuPanel" >
							<g:HTML styleName="{style.menuItem}" ui:field="newMenuItem" text="New" />
							<g:HTML><hr/></g:HTML>
							<g:HTML styleName="{style.menuItem}" ui:field="importMenuItem" text="Import" />
							<g:HTML styleName="{style.menuItem}" ui:field="exportMenuItem" text="Export" />
							<g:HTML><hr/></g:HTML>
							<g:HTML styleName="{style.menuItem}" ui:field="saveMenuItem" text="Save" />
							<g:FlowPanel ui:field="restoreMenuPanel" />
							<g:HTML><hr/></g:HTML>
							<g:HTML styleName="{style.menuItem}" ui:field="helpMenuItem" text="Help" />
						</g:FlowPanel>
					</g:west>
					<g:center>
						<g:SimpleLayoutPanel ui:field="diagramPanel" />
					</g:center>
					<g:east size='400'>
						<g:SplitLayoutPanel ui:field="palettePropertiesSplitter">
							<g:north size='500'>
								<g:DockLayoutPanel unit="EM" ui:field="paletteChooserCanvasSplitter">
									<g:north size="2.0">
										<g:ListBox ui:field="paletteChooser" visibleItemCount="1" width="100%" />
									</g:north>
									<g:center>
										<g:SimpleLayoutPanel ui:field="palettePanel" />
									</g:center>
								</g:DockLayoutPanel>
							</g:north>
							<g:center>
								<g:FlowPanel>
									<g:HTML><div class='{style.propertiesTitle}'>Properties</div></g:HTML>
									<o:PropertiesTextArea ui:field="propertiesPanel" height="100%" width="100%" />
								</g:FlowPanel>
							</g:center>
						</g:SplitLayoutPanel>
					</g:east>
				</g:SplitLayoutPanel>
<!-- 			</g:center> -->
<!-- 		</g:DockLayoutPanel> -->
	</g:HTMLPanel>
</ui:UiBinder> 